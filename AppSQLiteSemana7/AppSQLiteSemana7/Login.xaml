<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSQLiteSemana7.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"/>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasenia" Placeholder="Ingrese la contrasenia" IsPassword="True"/>
            <Button x:Name="btnInicio" Text="Iniciar sesion " Clicked="btnInicio_Clicked"/>
            <Button x:Name="btnRegistro" Text="Registro" Clicked="btnRegistro_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>